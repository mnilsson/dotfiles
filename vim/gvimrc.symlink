if has("gui_macvim")
    set guifont=Menlo\ Regular\ for\ Powerline:h13

    map <D-/> <plug>NERDCommenterToggle
    imap <D-/> <Esc><plug>NERDCommenterToggleli
    vmap <D-/> <plug>NERDCommenterTogglegv

    macmenu &File.New\ Tab key=<nop>
    macmenu &File.Open\ Tab\.\.\.<Tab>:tabnew key=<nop>
    map <D-t> :CommandTFlush<cr>\|:CommandT<CR>
    map <D-T> :CommandTFlush<cr>\|:CommandT %%<CR>
    imap <D-t> <Esc>:CommandT<CR>

    set fuopt+=maxhorz

    vmap <D-]> >gv
    vmap <D-[> <gv
    nmap <D-]> >>
    nmap <D-[> <<
    omap <D-]> >>
    omap <D-[> <<
    imap <D-]> <Esc>>>i
    imap <D-[> <Esc><<i
endif

set guioptions-=T
set guioptions-=lr


